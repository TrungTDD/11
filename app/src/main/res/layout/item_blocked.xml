<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/item_blocked_padding">

   <ImageView
       android:id="@+id/ivSelected"
       android:layout_width="@dimen/item_blocked_icon_selected_size"
       android:layout_height="@dimen/item_blocked_icon_selected_size"
       android:layout_gravity="center_vertical"
       android:layout_marginRight="@dimen/item_blocked_padding"
       android:background="@drawable/ic_blocked_selected"/>

    <TextView
        android:id="@+id/tvContent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_blocked_icon_selected_size"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:lines="1"
        android:ellipsize="end"
        android:text="AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA"/>
</LinearLayout>