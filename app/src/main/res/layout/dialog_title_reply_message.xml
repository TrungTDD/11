<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dialog_title_reply_sms_padding">

    <ImageView
        android:layout_width="@dimen/dialog_choose_contact_icon_size"
        android:layout_height="@dimen/dialog_choose_contact_icon_size"
        android:layout_marginRight="@dimen/dialog_title_reply_sms_space"
        android:layout_gravity="center_vertical"
        android:background="@drawable/inbox_big_icon"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:textSize="@dimen/dialog_title_reply_sms_title_text_size"
        android:text="@string/app_name"/>
    
    <Button
        android:id="@+id/btnClose"
        android:layout_width="@dimen/dialog_title_reply_smsclose_size"
        android:layout_height="@dimen/dialog_title_reply_smsclose_size"
        android:layout_gravity="center_vertical"
        android:background="@drawable/ic_close"/>

</LinearLayout>