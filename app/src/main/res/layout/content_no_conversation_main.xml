<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_no_conversation"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">
        <ImageView
            android:layout_width="@dimen/main_activity_no_conversation_icon_size"
            android:layout_height="@dimen/main_activity_no_conversation_icon_size"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/inbox_big_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="@dimen/main_activity_no_conversation_text_no_message_sise"
            android:text="@string/no_conversations"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_activity_no_conversation_space_icon_text" />

        <ImageView
            android:layout_width="@dimen/main_activity_no_conversation_icon_new_size"
            android:layout_height="@dimen/main_activity_no_conversation_icon_new_size"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/ic_new_message_blue"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textSize="@dimen/normal_text_size"
            android:text="@string/no_conversations_hint"/>
    </LinearLayout>
</RelativeLayout>
